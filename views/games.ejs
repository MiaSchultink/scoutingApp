<%- include('includes/top.ejs') %> 
<body>
    <div class="top">
        <%- include('includes/search.ejs') %> 
    <div class="main">
        <div class="page-container">
            <button class="general-btn" onclick="location.assign('/game/new')">Add Game</button>
            <div class="menu-games-container">
                <% for(let i=0; i<games.length; i++) {%>
                <div class="menu-game-container">
                    <div class="game-name-container">
                        <button class="link-btn game-name" onclick = "location.assign('/game/<%=games[i]._id%>')" type="submit"><%=games[i].name%></button>
                    </div>
                        <div class="btns-section">
                                <button class="small-btn" onclick="location.assign('/game/update/<%=games[i]._id%>')">Update</button>
                            <form action="/game/delete" method="post">
                                <button class="small-btn" type="submit">Delete</button>
                                <input type="hidden" name="gameId" value = '<%=games[i]._id%>'>
                                <input type ="hidden" name ="_csrf" value= '<%=csrfToken%>'>
                            </form>
                        </div>
                    </div>
                <% } %> 
        </div>
      </div>
      </div>
      <%- include('includes/nav.ejs') %> 
      </div>
</body>